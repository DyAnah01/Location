<h2 class="text-center text-danger"> Liste de commande</h2>
{% for value in OneCommande %}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="{{value.photoVehicule}}" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{value.titreVehicule}} - {{value.marque}} - {{ value.modele }}</h5>
              <p class="card-text">{{value.descriptionVehicule}}</p>
              <p class="card-text"><small class="text-muted">{{ value.titreAgences  }} - {{ value.ville }} - {{ value.cp }} </small></p>
