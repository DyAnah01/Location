{% extends 'base.html.twig' %} {% block title %}Hello VehiculeController!{%
endblock %} {% block h1 %} Gestion des Vehicule {% endblock h1 %} {% block body
%} {% for notification in app.flashes('success') %}
<div class="alert alert-success col-md-6 mx-auto text-center disparition">
  {{ notification }}
</div>

{% endfor %}

<div class="row justify-content-center">
  <div class="col-md-10">
    <table class="table table-white table-striped table-hover text-center">
      <thead class="bg-dark text-white">
        <tr>
          <th scope="col">vehicule</th>
          <th scope="col">Agence</th>
          <th scope="col">titre</th>
          <th scope="col">marque</th>
          <th scope="col">modele</th>
          <th scope="col">description</th>
          <th scope="col">photo</th>
          <th scope="col">prix</th>
          <th scope="col">actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
       
        {% for value in vehicule %}
        <tr>
          <th scope="row">{{ value.id }}</th>
          
          <td>{{ value.idAgence.ville }}</td>
          <td>{{ value.titre }}</td>
          <td>{{ value.marque }}</td>
          <td>{{ value.modele }}</td>
          <td>{{ value.description }}</td>
          <td>
            <img src=" {{ value.photo }}" width="200" alt="" />
          </td>
          <td>{{ value.prixJournalier }}</td>

          <td>
            {# DÃ©tail #}
           
                <a href="{{ path('detail', { 'id' : value.id } ) }}  " class="text-decoration-none">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="25"
                height="25"
                fill="currentColor"
                class="bi bi-search"
                viewBox="0 0 16 16"
              >
                <path
                  d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
                />
              </svg>
            </a>

            {# Update #}
            <a href="{{ path('update_vehicule', { 'id' : value.id } ) }}  " class="text-decoration-none">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-pencil-square"
                viewBox="0 0 16 16"
              >
                <path
                  d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                  fill-rule="evenodd"
                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                />
              </svg>
            </a>

            {# Delete #}
            <a href="{{ path('supprimer_vehicule', {"id" : value.id}) }}" class="text-decoration-none">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-trash3"
                viewBox="0 0 16 16"
              >
                <path
                  d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"
                />
              </svg>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
      {# {% for value in vehicule %} #}
    </table>

    <div class="col-md-10">
      {# FORM AJOUTER #}
      {{ form_start(formVehicule) }}
      <div class="row">
        <div class="col-md-5">
          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.titre) }}
          </div>

          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.description) }}
          </div>
          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.photo) }}
          </div>
          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.marque) }}
          </div>
          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.modele) }}
          </div>
          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.prix_journalier) }}
          </div>

          <div class="col-md-10 mx-auto">
            {{ form_row(formVehicule.id_agence) }}
          </div>


          <div class="row justify-content-center">
            <input
              type="submit"
              class="btn btn-success mt-3 col-md-6"
              value="Enregistrer"
            />
          </div>

          {{ form_end(formVehicule) }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock body %}
