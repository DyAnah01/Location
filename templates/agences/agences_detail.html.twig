{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}|Detail {{ ad.titre }}
{% endblock title %}
    
{% block body %}
<h1 class="mt-5 text-center">{{ ad.titre }}</h1>
<div class=" d-flex justify-content-center ">
    
    <img src="{{ ad.photo }}" alt="" width="200" height="300">
</div>

<div class="mt-5 text-center">
    <p>{{ ad.description }}</p>
    <p> <strong> Adresse : </strong>{{ad.adresse}} {{ad.ville}} {{ad.cp}}</p> 
</div>




<div class="d-flex flex-row-reverse">
    <a class="btn btn-success flex-end me-5" href="{{ path("app_agences") }}">Retour</a>
</div>

{% endblock body %}